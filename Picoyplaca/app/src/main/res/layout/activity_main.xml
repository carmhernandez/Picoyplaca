<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sistemas.picoyplaca.MainActivity"
    android:background="@drawable/carro">

    <TextView
        android:text="Pico y Placa Pasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Button
        android:text="Configuracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="configuracion"
        android:layout_marginRight="31dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignStart="@+id/textView"
        android:textCursorDrawable="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textColorHighlight="@android:color/black" />

    <Button
        android:text="ACERCA DE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="acercade"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/background_dark"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:text="Placa:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignBaseline="@+id/tv1"
        android:layout_alignBottom="@+id/tv1"
        android:layout_toStartOf="@+id/p" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginStart="58dp"
        android:layout_marginTop="87dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p"
        android:textSize="18sp"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView6"
        android:layout_toEndOf="@+id/button2" />
</RelativeLayout>
